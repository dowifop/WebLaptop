@model IEnumerable<WebLaptop.Models.Loai>
@{
    ViewBag.Title = "Loai";
    Layout = "~/Areas/admin/Views/Shared/Layout_Admin.cshtml";
}

<link rel="stylesheet" href="~/Content/css/admin.css" />
<link rel="stylesheet" href="~/Content/bootstrap.css" />

<ol class="breadcrumb">
    <li class="breadcrumb-item custom-title">Danh sách loại</li>
</ol>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Danh sách loại
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered" id="loai-table">
                <tr>
                    <th>
                        @Html.DisplayName("Mã Loại")
                    </th>
                    <th>
                        @Html.DisplayName("Tên Loại")
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.maLoai)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tenLoai)
                        </td>

                    </tr>
                }
            </table>
        </div>
    </div>
</div>

