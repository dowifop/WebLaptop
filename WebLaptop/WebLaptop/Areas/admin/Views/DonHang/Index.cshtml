@model IEnumerable<WebLaptop.Models.DonHang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/Layout_Admin.cshtml";
}
<link rel="stylesheet" href="~/Content/css/admin.css" />
<link rel="stylesheet" href="~/Content/bootstrap.css" />

<ol class="breadcrumb">
    <li class="breadcrumb-item custom-title">Danh sách đơn hàng</li>
</ol>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Danh sách đơn hàng
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered" id="donhang-table">
                <tr>
                    <th>
                        @Html.DisplayName("Mã Đơn")
                    </th>
                    <th>
                        @Html.DisplayName("Người đặt")
                    </th>
                    <th>
                        @Html.DisplayName("Ngày đặt")
                    </th>
                    <th>
                        @Html.DisplayName("Tổng tiền")
                    </th>
                    <th>
                        @Html.DisplayName("Tình Trạng")
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    var tenKH = item.KhachHang.TenKH;
                    var ngayDH = item.NgayDH.ToString("dd/MM/yyyy");


                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaDH)
                        </td>
                        <td>
                            @tenKH
                        </td>
                        <td>
                            @ngayDH
                        </td>
                        <td>
                            @item.TongTien.ToString("N0") @("₫")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TinhTrang)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

