@model WebLaptop.Models.SanPham

@{
    ViewBag.Title = "Chỉnh sửa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h2>Chỉnh sửa sản phẩm</h2>
        @using (Html.BeginForm("Edit", "SanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.maLaptop)

            <div class="form-group">
                @Html.LabelFor(model => model.tenLaptop, "Tên Laptop")
                @Html.EditorFor(model => model.tenLaptop, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.gia, "Giá")
                @Html.EditorFor(model => model.gia, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Mota, "Mô tả")
                @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Hinh, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @if (Model.Hinh != null)
                    {
                        <img src="@Url.Content(Model.Hinh)" width="150" height="150" />
                        <p>Để giữ hình ảnh hiện tại, không chọn file mới.</p>
                    }
                    <input type="file" name="Hinh" id="Hinh" class="form-control">
                    @Html.ValidationMessageFor(model => model.Hinh, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.maLoai, "Loại")
                @Html.DropDownListFor(model => model.maLoai, (SelectList)ViewBag.maLoai, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.maNSX, "Nhà sản xuất")
                @Html.DropDownListFor(model => model.maNSX, (SelectList)ViewBag.maNSX, new { @class = "form-control" })
            </div>

           

            <div class="form-group">
                @Html.LabelFor(model => model.SoLuong, "Số lượng")
                @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CPU, "CPU")
                @Html.EditorFor(model => model.CPU, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.VGA, "VGA")
                @Html.EditorFor(model => model.VGA, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RAM, "RAM")
                @Html.EditorFor(model => model.RAM, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SSD, "SSD")
                @Html.EditorFor(model => model.SSD, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-success" />
                <a href="@Url.Action("Index")" class="btn btn-default">Hủy bỏ</a>
            </div>
        }
    </div>
</div>
