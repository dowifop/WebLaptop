﻿@model IEnumerable<WebLaptop.Models.KhachHang>

@{
    ViewBag.Title = "Danh sách khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";

}
<link rel="stylesheet" href="~/Content/css/admin.css" />
<link rel="stylesheet" href="~/Content/bootstrap.css" />


<ol class="breadcrumb">
    <li class="breadcrumb-item custom-title">Danh sách khách hàng</li>
</ol>
<p>
    <a href="@Url.Action("Add")" class="add-customer-button">Thêm Khách hàng</a>
</p>

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayName("Tài khoản")</th>
                    <th>@Html.DisplayName("Họ tên")</th>
                    <th>@Html.DisplayName("Địa chỉ")</th>
                    <th>@Html.DisplayName("Số điện thoại")</th>
                    <th>@Html.DisplayName("Email")</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.MaKH)</td>
                        <td>@Html.DisplayFor(modelItem => item.TenKH)</td>
                        <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                        <td>@Html.DisplayFor(modelItem => item.SDT)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td class="action-buttons">
                            <a href="@Url.Action("Edit", new { id = item.MaKH })" class="btn btn-sm btn-warning">Sửa</a>
                            <a href="@Url.Action("Details", new { id = item.MaKH })" class="btn btn-sm btn-info">Chi tiết</a>
                            <a href="@Url.Action("Delete", new { id = item.MaKH })" class="btn btn-sm btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




