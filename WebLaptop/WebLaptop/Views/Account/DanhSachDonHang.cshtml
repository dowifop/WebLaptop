@{
    ViewBag.Title = "Danh Sách Đơn Hàng";
    Layout = "~/Views/Shared/layoutweb.cshtml";
}

<link rel="stylesheet" href="~/Content/css/style.css" />
<link rel="stylesheet" href="~/Content/bootstrap.css" />

<div class="container mt-4">
  
    <h2 class="text-center">Danh Sách Đơn Hàng</h2>
    
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Mã Đơn Hàng</th>
                    <th>Ngày Đặt Hàng</th>
                    <th>Tình Trạng</th>
                    <th>Chi Tiết</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var donHang in Model)
                {
                    <tr>
                        <td>@donHang.MaDH</td>
                        <td>@donHang.NgayDH.ToString("dd/MM/yyyy")</td>
                        <td>@donHang.TinhTrang</td>
                        <td>
                            <a href="@Url.Action("ChiTietDonHang", "Account", new { id = donHang.MaDH })" class="btn btn-primary btn-sm">
                                <span class="glyphicon glyphicon-eye-open"></span> Xem
                            </a>
                        </td>
                    </tr>
                }
            <tr>
                <td colspan="9">
                    <div class="btn-container">
                        <a href="@Url.Action("Index","Home")" class="btn btn-dark">Quay về trang chủ</a>
                    </div>
                </td>
            </tr>
            </tbody>

        </table>
      
    </div>
</div>

<style>
    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .btn {
        margin: 0;
        padding: 5px 10px;
    }

    .glyphicon {
        margin-right: 5px;
    }
  
</style>
