@using WebLaptop.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Website Bán Laptop</title>
    <link rel="stylesheet" href="~/Content/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
</head>
<body>
    <!-- Header -->
    <header>
        <div class="logo">
            <a href="@Url.Action("Index","Home")">
                <img src="~/Content/image/Logo.png" alt="Logo">
            </a>
        </div>

        <div class="menu">
            <nav>
                <ul>
                    <li><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="dropdown">
                        <a href="#">Danh mục sản phẩm</a>
                        <div class="dropdown-content">
                            <a href="@Url.Action("TheoHang", "Home", new { maNSX = 1 })">Asus</a>
                            <a href="@Url.Action("TheoHang", "Home", new { maNSX = 5 })">Acer</a>
                            <a href="@Url.Action("TheoHang", "Home", new { maNSX = 2 })">Dell</a>
                            <a href="@Url.Action("TheoHang", "Home", new { maNSX = 3 })">HP</a>
                            <a href="@Url.Action("TheoHang", "Home", new { maNSX = 4 })">MSI</a>
                        </div>
                    </li>
                    @if (Session["KH"] != null)
                    {
                        KhachHang tv = (KhachHang)Session["KH"];
                        <li class="dropdown">
                            <a>Chào @tv.TenKH</a>
                            <div class="dropdown-content">
                                <a href="@Url.Action("CaNhan","Account")">Tài khoản</a>
                                <a href="@Url.Action("DanhSachDonHang","Account")">Đơn Hàng</a>
                                <a onclick="return confirm('Bạn có chắc chắn muốn đăng xuất ?');" href="@Url.Action("Logout", "Account")">Đăng Xuất</a>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li><a id="btnDangNhap" class="lock" href="@Url.Action("Login", "Account")">Đăng nhập</a></li>
                        <li><a class="lock" href="@Url.Action("Register","Account")">Đăng ký</a></li>
                    }

                    <li><i @Url.Action("HienThiGioHang", "GioHang") class="fas fa-shopping-cart"> @Html.Action("GioHangPartial", "GioHang") </i></li>

                </ul>
            </nav>
        </div>
    </header>

    <!-- Thanh tìm kiếm -->



    @RenderBody()

    <div class="footer-dark">
        <footer>
            <div class="container">
                <div class="row">

                    <div class="col-sm-6 col-md-3 item">
                        <h3>Liên hệ</h3>
                        <ul>
                            <li>Tên:Thanh Bình</li>
                            <li>SĐT:0945783045</li>
                        </ul>
                    </div>
                    <div class="col-md-6 item text">
                        <h3> Về Website</h3>
                        <p>Dowifop Technology là một thương hiệu hàng đầu trong lĩnh vực bán Laptop và các thiết bị công nghệ liên quan đến máy tính. Với tầm nhìn của mình, website tập trung vào việc cung cấp cho khách hàng những sản phẩm chất lượng cao, hiệu suất mạnh mẽ và trải nghiệm đỉnh cao trong lĩnh vực này.</p>
                    </div>
                    <div class="col item social"><a href="https://www.facebook.com/dowifop/"><i class="icon ion-social-facebook"></i></a><a href="#"><i class="icon ion-social-twitter"></i></a><a href="#"><i class="icon ion-social-snapchat"></i></a><a href="#"><i class="icon ion-social-instagram"></i></a></div>
                </div>
                <p class="copyright">Dowifop Technology © 2023</p>
            </div>
        </footer>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>




</html>
